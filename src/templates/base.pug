head
	meta(charset='utf-8')
	block title
		title BlockTitle
	block description
		meta(name="description" content="Meta description Ready" )
	meta(http-equiv='X-UA-Compatible', content='IE=edge')
	meta(name='viewport', content='width=device-width, initial-scale=1')
	
	if debug == true
		link(rel='stylesheet', href='css/bootstrap.min.css')
		link(rel='stylesheet', href='css/style.css')

	else
		//-El nombre del archivo se debe reemplazar por el atributo name del package.json
		link(rel='stylesheet', href='css/'+name+'.min.css') 

	// Web Fonts
	link(href='http://fonts.googleapis.com/css?family=Varela+Round|Roboto:400italic,300,700,400' rel='stylesheet' type='text/css')

	<!--[if lt IE]>
