	script(src='js/libs/modernizr-2.6.2.min.js')

body
		
	//-Layout del header (logo, menu, login, etc)

	include partials/header
	
	
	//-Este bloque es para el markup de cada HTML
	block content
			

	//- Layout del Footer
	include partials/footer
	
	//-Acá se agregan los scripts que pueden estar para una sola página
	block Scripts


